<h1 xmlns="http://www.w3.org/1999/html">Wszystkie artykuły</h1>
<p>Zmiana od innego programisty</p>
<table>
  <th>Title</th><th>Text</th>

  <% @articles.each do |article| %>
    <tr>
      <td class="title"><%= article.title %></td>
      <td class="text"> <%= article.text%></td>
      <td><%= link_to 'Show', article_path(article),  remote: true, class: "show" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), remote: true, class: "edit" %></td>
      <td><%= link_to 'Destroy', article_path(article), method: :delete,  remote: true, class: "del" %></td>
    </tr>
  <% end %>

  <p><%= link_to "My Blog", controller: 'articles' %></p>
  <p><%= link_to "New article", new_article_path %></p>
</table>

<form class="edit" style="margin-top:20px; margin-bottom:20px">
  <label for="tytul">Tytuł: <input name="tytul" type="text" /></label>
  <label for="tekst">Tekst: <textarea name="tekst"></textarea></label>
  <button type="button" >Zmień dane</button>
</form>